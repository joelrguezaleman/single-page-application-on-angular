/* CUSTOM CSS STARTS HERE */
/* ---------------------- */

darkGray = #333333
mediumGray = #777777
lightGray = #F2F2F2
baseUnit = 20px

transition(type, seconds)
    -webkit-transition type seconds ease-out
    -moz-transition type seconds ease-out
    -o-transition type seconds ease-out
    transition type seconds ease-out

html, body
    height 100%
    background-color lightGray
    font-family 'Source Sans pro', Helvetica, Arial, sans-serif

h1
    font-size 40px
    margin-top baseUnit
    margin-bottom baseUnit
h2
    font-size 25px

.showMenu
    display none

.menu
    float left
    width 17%
    height 100%
    background-color darkGray
    padding-top baseUnit
    position fixed

    ul
        text-align center
        margin 0
        padding 0

        li
            display block
            padding 10px
            cursor pointer

            a
                color lightGray
                text-decoration none

        li:hover
            background-color lightGray

            a
                color darkGray
        
.content
    width 85%
    margin auto

.container
    float right
    background-color lightGray
    width 83%
    height 100%

    h1,h2
        text-align center
    p
        margin-left 20%
        margin-right 20%
        margin-top baseUnit
        margin-bottom baseUnit
        line-height 1.5em
        font-size 20px

    .logo
        max-width 100% !important
        height auto
        display block
        margin-left auto
        margin-right auto
        margin-top baseUnit

    .team-member
        @extend .content
        background-color mediumGray
        margin-bottom baseUnit
        padding 10px

        .image
            width auto
            display inline-block

            img
                max-width 100% !important
                height auto
                display block
                margin-left auto
                margin-right auto

        .text
            width 80%
            height 100%
            display inline-block
            float right

            .text-container
                height 150px
                display table

                p
                    display table-cell
                    vertical-align middle
                    color lightGray

            @media screen and (max-width: 1077px)
                width 75%
            @media screen and (max-width: 865px)
                width 65%

    .portfolio
        @extend .content
        text-align center
        padding-bottom baseUnit

        img
            display inline-block
            margin-bottom 4px
            opacity 1
            transition(opacity, 0.3s)
        img:hover
            opacity 0.5

    .mapa
        width 600px
        height 450px

        @media screen and (max-width: 1077px)
            width 500px
            height 400px
        @media screen and (max-width: 865px)
            width 400px
            height 300px
        @media screen and (max-width: 622px)
            width 330px
            height 230px
        @media screen and (max-width: 519px)
            max-width 100%
            height auto

@media screen and (max-width: 622px)

    h1
        font-size 34px

    .showMenu
        display block
        width 20px
        height 20px
        background-color lightGray
        padding 10px
        position fixed
        top 5px
        left 5px
        z-index 20
        cursor pointer

        .icon-bar
            height 1px
            margin-bottom 4px
            border-bottom 2px solid darkGray

    .menu
        float none
        width 100%
        height auto
        padding-top 0px
        display none
        z-index 10

    .container
        width 100%
    
        .logo
            max-width 80% !important
            margin-left auto
            margin-right auto
            margin-top baseUnit

        .portfolio
            img
                max-width 100% !important
                height auto

@media screen and (max-width: 519px)
    .container
        .team-member
            height auto
            display block

            .image
                display block
            .text
                width 100%
                display block
                float none

@media screen and (max-width: 519px)
    .container
        .team-member

            .image
                img
                    margin-bottom 10px
